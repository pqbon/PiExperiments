{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build LedBlinker",
            "type": "shell",
            "command": "/usr/bin/make",
            "linux": "true",
            "args": [
                "-f",
                "${workspaceFolder}/LedBlinker/GNUmakefile"
            ],
            "options": {
                "cwd": "${workspaceFolder}/LedBlinker"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean LedBlinker",
            "type": "shell",
            "command": "/usr/bin/make",
            "linux": "true",
            "args": [
                "-f",
                "${workspaceFolder}/LedBlinker/GNUmakefile",
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/LedBlinker"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}